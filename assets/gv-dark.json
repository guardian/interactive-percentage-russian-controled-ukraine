{
    "version": 8,
    "sources": {
        "vector-tiles": {
            "type": "vector",
            "tiles": [
                "https://interactive.guim.co.uk/maptiles/world/{z}/{x}/{y}.pbf"
            ]
        },
        "ukraine-fill":{
            "type": "geojson"
        },
        "separatists":{
            "type": "geojson"
        },
        "separatists-line":{
            "type": "geojson"
        },
        "annexed":{
            "type": "geojson"
        },
        "patch":{
            "type": "geojson"
        },
        "overlays":{
            "type": "geojson"
        },
        "oblasts":{
            "type": "geojson"
        },
        "ukraine-border":{
            "type": "geojson"
        },
        "labels":{
            "type": "geojson"
        }
    
    },
    "sprite": "",
    "glyphs": "https://interactive.guim.co.uk/maptiles/fonts/{fontstack}/{range}.pbf",
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint": {
                "background-color": "#E6E9EC"
            }
        },
        {
            "id": "admin_sub",
            "type": "line",
            "source": "vector-tiles",
            "source-layer": "boundary",
            "filter": [
                "all",
                [
                    "<=",
                    "admin_level",
                    2
                ],
                [
                    "!=",
                    "maritime",
                    1
                ]
            ],
            "paint": {
                "line-color": "#b3b3b4"
            }
        },
        {
            "id":"ukraine-fill",
            "type":"fill",
            "source":"ukraine-fill",
            "layout":{},
            "paint":{
                "fill-color":"#f6f6f6"
            }
        },
        {
            "id":"patch",
            "type":"fill",
            "source":"patch",
            "layout":{},
            "paint":{
                "fill-color":"#f0b5b8"
            }
        },
        {
            "id":"separatists-fill",
            "type":"fill",
            "source":"separatists",
            "layout":{},
            "paint":{
                "fill-color":"#c6c6c6"
            }
        },
        {
            "id":"separatists-line",
            "type":"line",
            "source":"separatists-line",
            "layout": {
                "line-join": "round",
                "line-cap": "round"
                },
                "paint": {
                "line-color": "#929297",
                "line-width": 2,
                "line-dasharray": [4, 2]
            }
        },
        {
            "id":"overlays",
            "type":"fill",
            "source":"overlays",
            "layout":{
                "visibility":"none"
            },
            "paint":{
                "fill-color":
                [
					"case",
					["==", ["get", "type"], "Claimed_Ukrainian_Counteroffensives"],
					"#f7cb56",
					["==", ["get", "type"], "Russian_Advances_Shapefile"],
					"#d8898a",
					["==", ["get", "type"], "Russian_CoT_in_Ukraine_Shapefiles"],
					"#f0b5b8",
					"#dadada"
				]
            }
        },
        {
            "id":"oblasts",
            "type":"line",
            "source":"oblasts",
            "layout": {
                "line-join": "round",
                "line-cap": "round"
                },
                "paint": {
                "line-color": "#929297",
                "line-width": 0.5
                }
        },
        {
            "id":"ukraine-border-halo",
            "type":"line",
            "source":"ukraine-border",
            "layout": {
                "line-join": "round",
                "line-cap": "round"
                },
                "paint": {
                "line-color": "#d9d9d9",
                "line-width": 6,
                "line-offset":-1
                }
        },
        {
            "id":"ukraine-border",
            "type":"line",
            "source":"ukraine-border",
            "layout": {
                "line-join": "round",
                "line-cap": "round"
                },
                "paint": {
                "line-color": "#66686d",
                "line-width": 1
            }
        },
        {
            "id": "water",
            "type": "fill",
            "source": "vector-tiles",
            "source-layer": "water",
            "filter": [
                "all",
                [
                    "==",
                    "$type",
                    "Polygon"
                ],
                [
                    "!=",
                    "intermittent",
                    1
                ],
                [
                    "!=",
                    "brunnel",
                    "tunnel"
                ]
            ],
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "fill-color": "#90DCFF"
            }
        },
        {
            "id": "water_intermittent",
            "type": "fill",
            "source": "vector-tiles",
            "source-layer": "water",
            "filter": [
                "all",
                [
                    "==",
                    "$type",
                    "Polygon"
                ],
                [
                    "==",
                    "intermittent",
                    1
                ]
            ],
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "fill-color": "#9BDFFF"
            }
        },
        {
            "id":"Annexed-line",
            "type":"line",
            "source":"annexed",
            "layout": {
                "line-join": "round",
                "line-cap": "round",
                "visibility":"none"
            },
            "paint": {
                "line-color": "#333",
                "line-width": 2
            }
            
            
        },
        {
            "id": "Annexed",
            "type": "symbol",
            "source": "labels",
            "minzoom": 3,
            "maxzoom": 22,
            "filter": [
                "==",
                "TYPE_1",
                "direct label"
            ],
            "layout": {
                "text-size": 14,
                "text-font": ["Guardian Text Sans Bold Italic"],
                "text-field": "{NAME_1}",
                "text-justify":["center"],
                "text-variable-anchor": ["center"],
                "text-radial-offset": 0.5,
                "text-justify": "auto",
                "icon-image": "Admin-0 capital",
                "icon-size": 1,
                "visibility":"none"
            },
            "paint": {
                "text-halo-color": "#FFFFFF",
                "text-halo-width": 1,
                "text-color": "#333333"
            }
        },
        {
            "id": "Admin-0 country",
            "type": "symbol",
            "source": "labels",
            "minzoom": 0,
            "maxzoom": 12,
            "filter": [
                "==",
                "TYPE_1",
                "Admin-0 country"
            ],
            "layout": {
                "text-size": 22,
                "text-font": ["GH Guardian Headline Bold"],
                "text-anchor": "center",
                "text-justify": "center",
                "text-field": "{NAME_1}",
                "text-radial-offset": 0.5,
                "visibility":"visible"
            },
            "paint": {
                "text-halo-color": "#FFFFFF",
                "text-halo-width": 1,
                "text-color": "#333333"
            }
        },
        {
            "id": "Admin-0 capital",
            "type": "symbol",
            "source": "labels",
            "minzoom": 3,
            "maxzoom": 22,
            "filter": [
                "==",
                "TYPE_1",
                "Independent City"
            ],
            "layout": {
                "text-size": 18,
                "text-font": ["Gdn Text Sans TS3Bold"],
                "text-field": "{NAME_1}",
                "text-justify":["center"],
                "text-variable-anchor": ["center"],
                "text-radial-offset": 0.5,
                "text-justify": "auto",
                "icon-image": "Admin-0 capital",
                "icon-size": 1,
                "visibility":"visible"
            },
            "paint": {
                "text-halo-color": "#FFFFFF",
                "text-halo-width": 1,
                "text-color": "#333333"
            }
        },
        {
            "id": "Admin-1 capital",
            "type": "symbol",
            "source": "labels",
            "filter": ["all",
                ["==","TYPE_1","Oblast'"]
            ],
            "layout": {
                "text-size": 14,
                "text-font": ["Gdn Text Sans TS3Regular"],
                "text-justify": "left",
                "text-field": "{NAME_1}",
                "text-variable-anchor": ["center"],
                "text-radial-offset": 0.5,
                "icon-image": "Admin-1 capital",
                "icon-size": 1,
                "visibility":"visible"
            },
            "paint": {
                "text-halo-color": "#FFFFFF",
                "text-halo-width": 1,
                "text-color": "#333333"
            }
        },
        {
            "id": "Autonomous Republic",
            "type": "symbol",
            "source": "labels",
            "minzoom": 3,
            "maxzoom": 22,
            "filter": [
                "==",
                "TYPE_1",
                "direct label"
            ],
            "layout": {
                "text-size": 14,
                "text-font": ["Guardian Text Sans Bold Italic"],
                "text-field": "{NAME_1}",
                "text-justify":["center"],
                "text-variable-anchor": ["center"],
                "text-radial-offset": 0.5,
                "text-justify": "auto",
                "visibility":"visible"
            },
            "paint": {
                "text-halo-color": "#FFFFFF",
                "text-halo-width": 1,
                "text-color": "#333333"
            }
        }
    ]
}